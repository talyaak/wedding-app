{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "outDir": "../dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "declaration": true,
        "typeRoots": [
            "./node_modules/@types",
            "./typings",
            "./index.d.ts"
        ],
        "lib": [
            "ES6"
        ],
        "sourceMap": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "files": [
        "./typings/custom.d.ts"
    ]
}